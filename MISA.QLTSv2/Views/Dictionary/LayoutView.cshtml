
@{
    ViewData["Title"] = "LayoutView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="tool-bar">
    <div class="filter-bar">
        <input id="txtsearch" class="input-search icon-search" type="text" placeholder="Tìm Kiếm" />
    </div>
    <div class="tool-bar-right">
        <div class="test-tooltip">
            <button id="btn-add-dictionary" class="button btn-add">Thêm</button>
        </div>
        <div>
            <button class="button btn-refresh" title="Làm mới">
                <div class="icon-refresh">

                </div>
            </button>
        </div>
        <div>
            <button  class="button btn-remove" title="Xóa">
                <div class="icon-remove ">
                </div>
            </button>
        </div>
    </div>
</div>
<div class="grid">
    <div class="grid-default">
        <table cellspacing="0" id="gridTest">
            <thead>
                <tr>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div id="dialog_dictionary" class="dialog_dictionary" style="display:block">
    <div class="container-fluid">
        <div class="row dialog-header">
            <div class="col-8">
                Loại tài sản
            </div>
            <div class="col-4 header-toolbar">
                <button class="btn-close button" id="btn-close">
                    <div class="icon-close">

                    </div>
                </button>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-6 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Mã loại tài sản (*)
                    </div>
                    <div>
                        <input class="input-text input-dictionary" fieldName="AssetTypeCode" required />
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="content-items">
                    <div class="text-header">
                        Tên loại tài sản (*)
                    </div>
                    <div>
                        <input class="input-text input-dictionary" fieldName="AssetTypeName" required /> 
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-6 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Thuộc loại (*)
                    </div>
                    <div>
                        <input class="input-text input-dictionary" fieldName="AssetClassName" required />
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="content-items">
                    <div class="text-header">
                        Nhóm tài sản
                    </div>
                    <div>
                        <select style="width:300px" id="cbx-test" DataType="Combobox" fieldName="AssetGroupName" fieldValue="AssetGroupId">
                            @*<option value="">-Select a number-</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                            <option value="4">Four</option>
                            <option value="5">Five</option>
                            <option value="6">Six</option>
                            <option value="7">Seven</option>
                            <option value="8">Eight</option>
                            <option value="9">Nine</option>
                            <option value="10">Ten</option>*@
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-6 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Tỷ lệ hao mòn
                    </div>
                    <div>
                        <input class="input-text input-dictionary" fieldName="WearPercent" />
                    </div>
                </div>
            </div>
            <div class="col-6">
                <div class="content-items">
                    <div class="text-header">
                        Số năm sử dụng
                    </div>
                    <div>
                        <input class="input-text input-dictionary" fieldName="YearOfUse" dataType="Number" />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-12">
                <div>Ghi chú</div>
                <textarea class="input-detail input-dictionary" fieldName="Note"></textarea>
            </div>
        </div>
    </div>
    <div class="dialog-footer">
        <div class="footer-left">
            <button class="button btn-cancel" id="btn-cancel">Hủy</button>
        </div>
        <div class="footer-right">
            <button class="button btn-add" id="btn-save">Lưu</button>
        </div>
    </div>
</div>
<div class="menu">
    <p>Option 1</p>
    <p>Option 2</p>
</div>
<div class="footer-layout">
    <div>
        Tổng số tài sản: 1.015
    </div>
    <div class="footer-right">
        Tổng nguyên giá: 1.546.354.789
    </div>
</div>





