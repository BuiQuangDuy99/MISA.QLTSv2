
@{
    ViewData["ParentTitle"] = "Tài sản";
    ViewData["ChildTitle"] = "Ghi tăng tài sản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Links{
    <link href="~/css/asset.css" rel="stylesheet" />
}
<div class="tool-bar" id="tbGrdFixedAsset">
    <div class="filter-bar">
        <input id="txtsearch" class="input-search icon-search" type="text" placeholder="Tìm Kiếm" />
    </div>
    <div class="tool-bar-right">
        <div>
            <button class="button btn-add" CommandName="Add">Thêm</button>
        </div>
        <div>
            <button class="button btn-refresh" CommandName="Refresh" title="Làm mới">
                <div class="icon-refresh">

                </div>
            </button>
        </div>
        <div>
            <button class="button btn-remove" CommandName="Delete" title="Xóa">
                <div class="icon-remove ">
                </div>
            </button>
        </div>
    </div>
</div>
<div class="grid">
    <div class="grid-default">
        <table cellspacing="0" id="asset-grid" data-toolbar="#tbGrdFixedAsset">
            <thead>

            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>
<div class="menu">
    <p>Option 1</p>
    <p>Option 2</p>
</div>
<div class="footer-layout">
    <div>
        Tổng số tài sản: 1.015
    </div>
    <div class="footer-right">
        Tổng nguyên giá: 1.546.354.789
    </div>
</div>

<div id="dialog_asset" class="dialog_asset" title="Ghi tăng tài sản">
    <div class="container-fluid">
        <div class="row dialog-header">
            <div class="col-8">
                Ghi tăng tài sản
            </div>
            <div class="col-4 header-toolbar">
                <button class="btn-help button">
                    <div class="icon-help">

                    </div>
                </button>
                <button class="btn-close button" id="btn-close">
                    <div class="icon-close">

                    </div>
                </button>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-5 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Mã tài sản(*)
                    </div>
                    <div>
                        <input fieldName="FixedAssetCode" class="input-text input-asset" required />
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="content-items">
                    <div class="text-header">
                        Tên tài sản(*)
                    </div>
                    <div>
                        <input fieldName="FixedAssetName" class="input-text input-asset" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-5 m-col-5">
                <div class="content-items">
                    <div class="text-header ">
                        Mã phòng ban
                    </div>
                    <div>
                        <select id="cbxdepartment" fieldName="DepartmentCode">
                            <option value="Phòng công nghệ">PB567</option>
                            <option value="Phòng hành chính">PB789</option>
                            <option value="Phòng nhân sự">PB123</option>
                            <option value="Phòng giám đốc">PB674</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="content-items">
                    <div class="text-header">
                        Tên phòng ban
                    </div>
                    <div>
                        <input id="txtdepartment" fieldName="DepartmentName" class="input-text input-asset2" disabled />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-5 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Mã loại tài sản
                    </div>
                    <div>
                        <select id="cbxassetcategory" fieldName="FixedAssetCategoryCode">
                            <option value="Tài sản chung">TS878</option>
                            <option value="Tài sản Riêng">TS7988</option>
                            <option value="Tài sản nội vụ">TS67889098</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="content-items">
                    <div class="text-header">
                        Tên loại tài sản
                    </div>
                    <div>
                        <input id="txtAssetGroupName" fieldName="FixedAssetCategoryName" class="input-text input-asset2" disabled />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-5 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Ngày ghi tăng
                    </div>
                    <div>
                        <input id="dtIncrementDate" dataType="date" fieldName="IncrementDate" class="input-date input-asset" type="text" data-mask="00/00/0000" />
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6" style="padding-right:15px">
                            <div>
                                <div class="text-header">
                                    Thời gian sử dụng(Năm)
                                </div>
                                <div>
                                    <input class="form-control input-text input-asset3 input-number" type="number" value="10" min="0" max="20" dataType="Number" fieldName="ProductionYear" />
                                </div>
                            </div>
                        </div>
                        <div class="col-6" style="padding-left:15px">
                            <div>
                                <div class="text-header">
                                    Tỷ lệ hao mòn(%)
                                </div>
                                <div>
                                    <input class="form-control input-text input-asset3 input-number" type="number" value="10.5" min="0" max="20" dataType="Number" fieldName="DepreciationRate" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-5 m-col-5">
                <div class="content-items">
                    <div class="text-header">
                        Nguyên giá
                    </div>
                    <div>
                        <input dataType="Money" fieldName="Cost" class="input-text input-right  input-asset" />
                    </div>
                </div>
            </div>
            <div class="col-7">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-6" style="padding-right:15px">
                            <div>
                                <div class="text-header">
                                    Giá trị hao mòn năm
                                </div>
                                <div>
                                    <input fieldName="DepreciationYearPrice" class="input-text input-right  input-asset3" />
                                </div>
                            </div>
                        </div>
                        <div class="col-6" style="padding-left:15px">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <input fieldName="FixedAssetId" style="display:none" />
    </div>

    <div class="dialog-footer">
        <div class="footer-left">
            <button class="button btn-cancel" id="btn-cancel">Hủy</button>
        </div>
        <div class="footer-right">
            <button id="btn-save" class="button btn-add">Lưu</button>
        </div>
    </div>

</div>

@section scripts{
    <script src="~/js/Form/assetForm.js"></script>
    <script src="~/js/views/Asset/assetIncreased.js"></script>
}