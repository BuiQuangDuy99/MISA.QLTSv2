
@{
    ViewData["ParentTitle"] = "Tài sản";
    ViewData["ChildTitle"] = "Điều chuyển";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Links{
    <link href="~/css/Form/asset.css" rel="stylesheet" />
    <link href="~/css/Form/refTransfer.css" rel="stylesheet" />
}
<div class="tool-bar" id="tbGrdRefTransfer">
    <div class="filter-bar">
        <input id="txtsearch" class="input-search icon-search" type="text" placeholder="Tìm Kiếm" />
    </div>
    <div class="tool-bar-right">
        <div>
            <button class="button btn-add" CommandName="Add">Thêm</button>
        </div>
        <div>
            <button class="button btn-refresh" CommandName="Refresh" title="Làm mới">
                <div class="icon-refresh">

                </div>
            </button>
        </div>
        <div>
            <button class="button btn-remove" CommandName="Delete" title="Xóa">
                <div class="icon-remove ">
                </div>
            </button>
        </div>
    </div>
</div>
<div class="grid">
    <div class="grid-default">
        <table cellspacing="0" id="reftransfer-grid" data-toolbar="#tbGrdRefTransfer">
            <thead>

            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<div id="dialog_reftransfer" class="dialog_reftransfer" title="Thêm chứng từ điều chuyển tài sản">
    <div class="container-fluid">
        <div class="row dialog-header">
            <div class="col-8">
                Thêm chứng từ điều chuyển tài sản
            </div>
            <div class="col-4 header-toolbar">
                <button class="btn-help button">
                    <div class="icon-help">

                    </div>
                </button>
                <button class="btn-close button" id="btn-close">
                    <div class="icon-close">

                    </div>
                </button>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col col-12 content-items" style="display:flex">
                <div>
                    <div class="text-header">
                        Ngày điều chuyển
                    </div>
                    <div class="date-picker">
                        <input id="TestDate" fieldName="PostedDate" class="input-date input-asset" dataType="date" placeholder="__/__/____" required />
                        <div class="icon_PostDate"></div>
                    </div>
                </div>
                <div class="ml-4">
                    <div class="text-header">
                        Số chứng từ
                    </div>
                    <div>
                        <input fieldName="RefNo" class="input-text input-asset RefNo " maxlength="50" dataType="Text" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-row-content">
            <div class=" col-12">

                <div class="text-header">
                    Lý do điều chuyển
                </div>
                <div>
                    <textarea fieldName="JournalMemo" class="input-detail input-dictionary" rows="2" dataType="Text"></textarea>
                </div>

            </div>
        </div>
        <div class="row depreciation-header">
            <div class="col-8">
                Danh sách tài sản
            </div>
        </div>
        <div class="row m-row-content">
            <div class=" col-12" style="height:212px;overflow-y: auto">
                <table fieldName="RefDetail" id="reftransfer-sub-grid" class="reftransfer-sub-grid" dataType="JSON">
                    <thead>
                        <tr>
                            <th style="width:40px" class="text-alight-center" dataType="STT" title="Số thứ tự" fieldName="STT">STT</th>
                            <th style="width:89px" fieldName="FixedAssetCode">Mã tài sản</th>
                            <th style="width:125px" fieldName="FixedAssetName">Tên tài sản</th>
                            <th style="width:140px" fieldName="Department1">Từ phòng ban</th>
                            <th style="width:121px" fieldName="Department2">Chuyển tới</th>
                            <th style="width:30px" fieldName="Function_SubGrid" dataType="Function_SubGrid"></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row m-row-content">
            <div class=" col-12">
                <div style="display:flex; padding-top:10px">
                    <button id="btn_addcolum" class="button button-depreciation btn-add-row">
                        <div class="button-depreciation-icon btn-add-row-icon"></div>
                        <div class="btn-content">Thêm dòng</div>
                    </button>
                    <button class="button button-depreciation btn-delete-all-row ml-4">
                        <div class="button-depreciation-icon btn-delete-all-row-icon"></div>
                        <div class="btn-content">Xóa hết dòng</div>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="dialog-footer">
        <div class="footer-left">
            <button class="button btn-cancel" id="btn-cancel">Hủy</button>
        </div>
        <div class="footer-right">
            <button id="btn-save" class="button btn-add">Lưu</button>
        </div>
    </div>
</div>

<div id="dialog_addcolum" class="dialog_add" title="Thêm chứng từ điều chuyển tài sản">
    <div class="container-fluid">
        <div class="row dialog-header">
            <div class="col-8">
                Thêm tài sản
            </div>
            <div class="col-4 header-toolbar">
                <button class="btn-help button">
                    <div class="icon-help">

                    </div>
                </button>
                <button class="btn-close button" id="btn-close">
                    <div class="icon-close">

                    </div>
                </button>
            </div>
        </div>
        <div class="row m-row-content">
            <div class="col-6 m-col-6-left">
                <div class="content-items">
                    <div class="text-header">
                        Mã tài sản(*)
                    </div>
                    <div>
                        <input id="txtreftranfer" fieldName="FixedAssetCode" class="input-text input-asset" required />
                    </div>
                </div>
            </div>
            <div class="col-6 m-col-6-right">
                <div class="content-items">
                    <div class="text-header">
                        Tên tài sản
                    </div>
                    <div>
                        <input fieldName="FixedAssetName" class="input-text input-asset" />
                    </div>
                </div>
            </div>

        </div>
        <div class="row m-row-content">
            <div class="col-6 m-col-6-left">
                <div class="content-items">
                    <div class="text-header">
                        Phòng ban
                    </div>
                    <div>
                        <input fieldName="Department1" class="input-text input-asset" />
                    </div>
                </div>
            </div>
            <div class="col-6 m-col-6-right">
                <div class="content-items">
                    <div class="text-header">
                        Chuyển tới
                    </div>
                    <div>
                        @*<input fieldName="Department2" class="input-text input-asset" required />*@
                        <select fieldName="Department2" class="input-text input-asset">
                            <option value="Phòng hành chính">Phòng hành chính</option>
                            <option value="Phòng kế toán">Phòng kế toán</option>
                            <option value="Phòng công nghệ">Phòng công nghệ</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="dialog-footer">
            <div class="footer-left">
                <button class="button btn-cancel" id="btn-cancel">Hủy</button>
            </div>
            <div class="footer-right">
                <button id="btn-save" class="button btn-add">Lưu</button>
            </div>
        </div>
    </div>
</div>




@section scripts{
    <script src="~/js/Form/addcolumForm.js"></script>
    <script src="~/js/Form/reftransferForm.js"></script>
    <script src="~/js/views/Asset/refTransferDetail.js"></script>
    <script src="~/js/views/Asset/refTransfer.js"></script>
}
